<style>
  body {
    font-family: Arial, sans-serif;
    background: #1a1a1a;
    color: #fff;
  }

  .main-title {
    max-width: 900px;
    margin: {{ section.settings.main_carousel_text_border }}px auto 0px auto;
    font-weight: bold;
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #fff;
    border-bottom: 2px solid #aaa;
  }

  .main-slider {
    max-width: 900px;
    max-height: 700px;
    margin-top: {{ section.settings.main_carousel_top_border }}px;
    margin-bottom: {{ section.settings.main_carousel_bottom_border }}px;
    position: relative;
  }

  .main-slider img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  .description-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: #fff;
    padding: 20px;
    font-size: 13px;
    line-height: 1.6;
    z-index: 10;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #fff;
    font-weight: bold;
  }
</style>

<section>
  {% if section.settings.main_carousel_title != blank %}
    <div class="main-title">{{ section.settings.main_carousel_title }}</div>
  {% endif %}

  <div class="swiper main-slider">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.main_carousel_image != blank %}
          <div class="swiper-slide">
            <img
              src="{{ block.settings.main_carousel_image | img_url: 'master' }}"
              alt="Main Carousel Image"
              height="auto"
              width="auto"
            >
            {% if block.settings.main_carousel_text != blank %}
              <div class="description-overlay">
                {{ block.settings.main_carousel_text }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="swiper-button-prev main-prev"></div>
    <div class="swiper-button-next main-next"></div>
  </div>
</section>

<script>
  // Main Swiper Only
  var mainSwiper = new Swiper('.main-slider', {
    spaceBetween: 10,
    {% comment %} loop: true, {% endcomment %}
    navigation: {
      nextEl: '.main-next',
      prevEl: '.main-prev',
    },
    {% comment %} {% if section.settings.auto_slide == 'true' %}
      autoplay: {
        delay: {{ section.settings.auto_main_slide_speed }},
        disableOnInteraction: false,
      },
    {% endif %} {% endcomment %}
    speed: 800, // smooth transition
  });

  // Optional: pause autoplay when hovering
  const mainEl = document.querySelector('.main-slider');
  mainEl.addEventListener('mouseenter', () => mainSwiper.autoplay.stop());
  mainEl.addEventListener('mouseleave', () => mainSwiper.autoplay.start());
</script>

{% schema %}
{
  "name": "Main Carousel Only",
  "disabled_on": {
    "groups": ["aside", "header", "footer", "custom.hero"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Main Carousel Setting"
    },
    {
      "type": "text",
      "id": "main_carousel_title",
      "label": "Main Carousel Title"
    },
    {
      "type": "range",
      "id": "main_carousel_text_border",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Text Border",
      "default": 10
    },
    {
      "type": "range",
      "id": "main_carousel_top_border",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Carousel Top Border",
      "default": 10
    },
    {
      "type": "range",
      "id": "main_carousel_bottom_border",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Carousel Bottom Border",
      "default": 20
    },
    {
      "type": "header",
      "content": "Carousel Slide Setting"
    },
    {
      "type": "checkbox",
      "id": "auto_slide",
      "label": "Auto Slide",
      "default": true
    },
    {
      "type": "range",
      "id": "auto_main_slide_speed",
      "min": 1000,
      "max": 8000,
      "step": 1000,
      "unit": "ms",
      "label": "Auto Slide Speed",
      "default": 3000,
      "visible_if": "{{ section.settings.auto_slide == true }}"
    }
  ],
  "blocks": [
    {
      "name": "Main Image",
      "type": "main_image",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "main_carousel_image",
          "label": "Main Carousel Image"
        },
        {
          "type": "richtext",
          "id": "main_carousel_text",
          "label": "Main Carousel Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Main Carousel"
    }
  ]
}
{% endschema %}
